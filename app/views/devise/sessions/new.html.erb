<div class="signInBox">
  <div class="navBarContainer">
  <% if current_user %>
    <%= render "shared/nav_bar" %>
  <% else %>
    <%= render "shared/landing_nav_bar" %>
  <% end %>
  </div>
  <% if !current_user %>
  <nav class="sign-in">
    <p>Not a Member?</p>
    <a href="/users/sign_up" class="sign-in-button">Join Now</a>
  </nav>
  <% end %>

  <div class="sessionModalWrapper">
    <div class="logInModal">
      <h2 class="logInHeading">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="form-flex-wrapper">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="check-field field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="large-submit-button">
            <%= f.submit "Log in" %>
          </div>
        </div>
      <% end %>

      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
