<div class="navBarContainer">
<% if current_user %>
  <%= render "shared/nav_bar" %>
<% else %>
  <%= render "shared/landing_nav_bar" %>
<% end %>
</div>



<section class="create-new-event">
  <div class="gym-buddy-hero-image">
    <div class="new-event top-heading">
      <h1 class="new-event-heading">Find a Gym Buddy</h1>
    </div>
    <div class="new-event sub-heading">
      <h2 class="new-event-heading">Weâ€™ll connect you with someone to keep you motivated.</h2>
    </div>
  </div>

  <nav class="search">

    <%= form_tag users_path, method: :get do %>
      <div class="form-card discover">
        <div class="form-item-icon">
          <%= image_tag "worldwide.svg" %>
        </div>
        <div class="form-item">
          <h2 class="activity-type-header">Find People Near</h2>
          <%= text_field_tag :search, current_user.location, id: "locationSearchField" %>
        </div>
        <div class="form-item">
          <h2 class="activity-type-header">Radius</h2>
          <%= select_tag :radius, options_for_select([["1km", 1], ["2km", 2], ["5km", 5], ["10km", 10], ["20km", 20], ["30km", 30], ["40km", 40], ["50km", 50], ["60km", 60], ["70km", 70], ["80km", 80], ["90km", 90], ["100km", 100]], selected: 60), include_blank: false %>
        </div>
      </div>
      <div class="form-card discover">
        <div class="form-item">
          <h2 class="activity-type-header">Who would you prefer to workout with?</h2>
          <%= select_tag :gender, options_for_select([["All", nil], "Female", "Male", "Non-Binary"], selected: "All"), include_blank: false %>
        </div>
      </div>
      <div class="form-card discover">
        <h2 class="activity-type-header">What type of fitness will you be looking to do?</h2>
        <div class="activity-icons-wrapper">
          <div class="activity-icon">
            <p class="activity-type-description">Yoga/Pilates</p>
            <label class="activity-type hide-radio-button">
              <%= radio_button_tag :activity_type, "Yoga/Pilates", checked = false %>
              <div class="clickedRadioCircle"></div>
              <%= image_tag("lotus-position.svg") %>
            </label>
          </div>
          <div class="activity-icon">
            <p class="activity-type-description">Resistence</p>
            <label class="activity-type hide-radio-button">
              <%= radio_button_tag :activity_type, "Resistence Training", checked = false %>
              <div class="clickedRadioCircle"></div>
              <%= image_tag("exercise.svg") %>
            </label>
          </div>
          <div class="activity-icon">
            <p class="activity-type-description">Cardio</p>
            <label class="activity-type hide-radio-button">
              <%= radio_button_tag :activity_type, "Cardio", checked = false %>
              <div class="clickedRadioCircle"></div>
              <%= image_tag("athletics.svg") %>
            </label>
          </div>
          <div class="activity-icon">
            <p class="activity-type-description">Recreation</p>
            <label class="activity-type hide-radio-button">
              <%= radio_button_tag :activity_type, "Recreation", checked = false %>
              <div class="clickedRadioCircle"></div>
              <%= image_tag("american-football.svg") %>
            </label>
          </div>
          <label class="activity-type hide-radio-button">
            <%= radio_button_tag :activity_type, "", checked = true %>
            <div class="clickedRadioSquare"></div>
            <div class="activity-icon-all">All Types</div>
          </label>
        </div>
      </div>

      <div class="form-card discover">
        <div class="form-item">
          <h2 class="activity-type-header">What fitness level?</h2>
          <%= select_tag :fitness_level, options_for_select([["All", ""], 1, 2, 3], selected: "All"), include_blank: false %>
        </div>
      </div>
        <div class="form-card discover">
          <div class="form-item">
            <label class="fitness-level availabilityCheck">
              <h2 class="activity-type-header-block availabilityCheck">Only show those with matching availability</h2>
              <%= check_box_tag :availability_check, true, checked = false %>
            </label>
          </div>

      </div>
      <div class="form-submit">
        <div class="large-submit-button">
          <%= submit_tag "Find Buddy" %>
        </div>
      </div>
      <% end %>
    </nav>


</section>
