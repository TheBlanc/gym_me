<div class="conversaionShowPageContainer">
  <div class="navBarContainer">
    <% if current_user %>
    <%= render "shared/nav_bar" %>
    <% else %>
    <%= render "shared/landing_nav_bar" %>
    <% end %>
  </div>
  <div id="conversation-main">
    <div class="convoHeadingContainer">
      <div class="backButton">
        <%= link_to conversations_path do %>
          <<
        <% end %>
      </div>
      <div class="convoUserFlexContainer">
        <%= link_to user_url(@receiver.id) do %>
        <div class="userChatAvatar">
          <% if @receiver.avatar.attached? %>
          <div class="avatar">
            <%= image_tag url_for(@receiver.avatar) %>
          </div>
          <% else %>
          <div class="avatar">
            <%= image_tag(user_avatar(@receiver)) %>
          </div>
          <% end %>
        </div>
        <h1 class="convoUserHeadingName"><%= full_name(@receiver) %></h1>
        <% end %>
      </div>
    </div>
    <div class="submitMessageContainer">
      <%= form_for @personal_message do |f| %>
        <%= hidden_field_tag 'receiver_id', @receiver.id %>
        <%= f.submit "Start Conversation" %>
        <%= f.text_area :body %>
      <% end %>
    </div>
  </div>
</div>
